#!/bin/bash

readonly IMAGE="binocarlos/viking"
export DOCKER_URL=${DOCKER_URL:="https://get.docker.io/ubuntu/"}
export DOCKER_PORT=${DOCKER_PORT:=2375}

# INSTALL
check-environment(){
	if [ -z $HOSTNAME ]; then
		echo "HOSTNAME variable needed"
		exit 1
	fi
	if [ -z $VIKING_IP ]; then
		echo "VIKING_IP variable needed"
		exit 1
	fi
	if [ -z $VIKING_MASTERS ]; then
		echo "VIKING_MASTERS variable needed"
		exit 1
	fi
	if [ -z $VIKING_ETCD ]; then
		IFS=',' read -a masters <<< "$VIKING_MASTERS"
		VIKING_ETCD="${masters[0]}"
	fi
}

docker-environment(){
	echo "-e VIKING_IP=$VIKING_IP -e VIKING_ETCD=$VIKING_IP:4001 -e VIKING_MASTERS=$VIKING_MASTERS -e VIKING_DOCKER=$VIKING_IP:$DOCKER_PORT"
}

install-docker(){
	curl -sSL $DOCKER_URL | sudo sh
	sysctl -w net.ipv4.ip_forward=1
	echo "DOCKER_OPTS='-H unix:///var/run/docker.sock -H tcp://$VIKING_IP:$DOCKER_PORT'" > /etc/default/docker
	service docker restart
	sleep 2
}

install-core() {	
	install-docker
}

install-slave() {
	#docker pull progrium/registrator
	#docker pull progrium/ambassadord
	echo ""
}

install-master() {
	docker pull binocarlos/etcd
	docker pull binocarlos/smesh
}

cmd-install() {
	check-environment
	case "$1" in	
	core)               shift; install-core $@;;
	slave)              shift; install-slave $@;;
	master)             shift; install-master $@;;
  *)
		echo "usage: viking install <mode>"
	;;
	esac
}

# SLAVE
start-registrator(){
	docker run -d \
		--name registrator \
    -v /var/run/docker.sock:/tmp/docker.sock \
    -h $HOSTNAME progrium/registrator -ip=$VIKING_IP etcd://$VIKING_ETCD:4001/viking/backends
}

start-ambassadord(){

	docker run -d \
		--name backends \
		-v /var/run/docker.sock:/var/run/docker.sock \
		progrium/ambassadord --omnimode

	docker run --rm \
		--privileged \
		--net container:backends \
		progrium/ambassadord --setup-iptables

}

slave-start() {
	start-registrator
	start-ambassadord
	env=$(docker-environment)
	docker run -d \
		-p 8792:80 $env \		
		--name vikingslave \
		-e "SERVICE_NAME=vikingslave" \
		binocarlos/viking slave $@
}

slave-stop() {
	docker stop registrator && docker rm registrator	
	docker stop backends && docker rm backends
}

cmd-slave() {
	check-environment etcd
	case "$1" in	
	start)              shift; slave-start $@;;
	stop)               shift; slave-stop $@;;
  *)
		echo "usage: viking slave (start|stop) [OPTIONS}"
	;;
	esac
}

# MASTER
master-start() {
	running=$(docker ps | grep smesh)	
	if [ -z "$1" ]; then
		echo "usage: viking master start --peers | --token [OPTIONS}"
		exit 1
	fi
	if [ -n "$running" ]; then
		echo "the master is already running"
		exit 1
	fi
	
	$(docker run --rm binocarlos/smesh start --hostname $HOSTNAME --address $VIKING_IP $@)
	docker run -d \
		-p 8791:80 `docker-environment` \		
		--name vikingmaster \
		-e "SERVICE_NAME=vikingmaster" \
		binocarlos/viking master $@
}

master-stop() {
	docker stop smesh && docker rm smesh
	docker stop vikingmaster && docker rm vikingmaster
}

cmd-master() {
	check-environment etcd
	case "$1" in	
	start)              shift; master-start $@;;
	stop)               shift; master-stop $@;;
  *)
		echo "usage: viking master (start|stop)"
	;;
	esac
}

cmd-env() {
	docker run --rm -ti \
		--name vikingenv `docker-environment` \
		--hostname $HOSTNAME \
		-e "SERVICE_NAME=vikingenv" \
		binocarlos/viking env
}

cmd-etcdctl() {
	check-environment
	docker run --rm -ti binocarlos/etcdctl --peers $VIKING_IP:4001 $@
}

cmd-proxy() {
	docker run --rm -ti binocarlos/viking $@
}

# CONTROLLER
main() {
	case "$1" in
	install)            shift; cmd-install $@;;
	master)             shift; cmd-master $@;;
	env)                shift; cmd-env $@;;
	slave)              shift; cmd-slave $@;;
	etcdctl)            shift; cmd-etcdctl $@;;
	*)                  cmd-proxy $@;;
	esac
}

main "$@"